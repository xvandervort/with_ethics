#!/usr/bin/env ruby

require 'optparse'
require "with_ethics"
include WithEthics

params = {}  # for parameters to pass on to run unit
option_parser = OptionParser.new do |opts|
  opts.on( '-h', '--help', 'Display this screen' ) do
    puts opts
    exit
  end
  
  # use for testing.
  opts.on('-s', '--SKIP', "Simulate running but don't actually do anything") do # not yet implemented
    params[:skip] = true
  end
end

option_parser.parse!

params[:skip] ||= false
params[:config_file] ||= "promises.yml"
execute!(params)
